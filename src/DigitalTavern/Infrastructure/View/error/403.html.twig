{% set base = (is_granted()) ? 'layout/default.html.twig' : 'layout/empty.html.twig' %}

{% extends base %}

{% block title %}Access denied{% endblock %}

{% block content %}
    <div class="container">
        <h1 class="text-danger pt-4">403</h1>
        <p>
            {{ message|default('Access denied.') }}
            {% if not is_granted() %}
                Go back to <a href="{{ path('Home:index') }}">homepage</a>.
            {% endif %}
        </p>
    </div>
{% endblock %}
{% extends 'layout/default.html.twig' %}

{% block title %}{{ profile.ign }}'s profile{% endblock %}

{% block content %}
    <h1>{{ profile.ign }}'s profile</h1>
    <div class="row">
        <div class="col-md-6">
            <img src="{{ asset(profile.avatarPath) }}" alt="{{ profile.ign }}" class="rounded-circle d-block mx-auto" width="300px">
        </div>
        <div class="col-md-6">
            <h2>{{ profile.ign }}</h2>
            <p>Race: {{ profile.race|default('unknow') }}</p>
            <p>Origin: {{ profile.origin|default('unknow') }}</p>
            <p>Age: {{ profile.age|default('unknow') }}</p>
            <p>Occupation: {{ profile.occupation|default('unknow') }}</p>
        </div>
    </div>
{% endblock %}
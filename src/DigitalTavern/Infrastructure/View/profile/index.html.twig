{% extends 'layout/default.html.twig' %}

{% block title %}{{ profile.ign }}{% endblock %}

{% block content %}
    <section id="profile-overview">
        <h1 class="section-heading">
            {{ profile.ign }}
            {% if profile.user.role != null %}
                <span class="badge badge-primary ml-2">{{ profile.user.role|upper }}</span>
            {% endif %}
            {% if is_granted() and profile.user.id == _user.id %}
                <a href="{{ path('Profile:edit') }}" class="float-right" data-toggle="tooltip" data-placement="left" title="Edit profile" data-original-title="Edit profile">
                    <span class="fa fa-fw fa-pencil" aria-hidden="true"></span>
                    <span class="offscreen">Edit profile</span>
                </a>
            {% endif %}
        </h1>
        <img src="{{ asset(profile.avatarPath) }}" alt="{{ profile.ign }}" class="rounded-circle d-block mx-auto mb-4" width="300px">
        <div class="row justify-content-center">
            <p class="profile-info col-md-2">
                {{ profile.race|default('unknow') }}
                <span class="profile-label">Race</span>
            </p>
            <p class="profile-info col-md-2">
                {{ profile.origin|default('unknow') }}
                <span class="profile-label">Origin</span>
            </p>
            <p class="profile-info col-md-2">
                {{ profile.age|default('unknow') }}
                <span class="profile-label">Age</span>
            </p>
            <p class="profile-info col-md-2">
                {{ profile.occupation|default('unknow') }}
                <span class="profile-label">Occupation</span>
            </p>
            <p class="profile-info col-md-2">
                {{ profile.user.lastActivityDate|date|time_diff|default('never') }}
                <span class="profile-label">Last seen</span>
            </p>
        </div>
    </section>
    <section id="profile-full" class="mt-4">
        <h2 class="section-heading">Full profile</h2>
        <p>
            {{ profile.full|raw|default('This character is shrouded in a mist of mystery.') }}
        </p>
    </section>
{% endblock %}
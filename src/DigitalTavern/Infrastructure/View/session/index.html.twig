{% extends 'layout/default.html.twig' %}

{% block title %}Sessions{% endblock %}

{% block content %}
    {% for msg in flashbag('success') %}
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <span class="font-weight-bold">Well done!</span> {{ msg }}
        </div>
    {% endfor %}

    {% for msg in flashbag('warning') %}
        <div class="alert alert-dismissible alert-warning">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <span class="font-weight-bold">Check yo self!</span> {{ msg }}
        </div>
    {% endfor %}

    <section id="sessions">
        <h1 class="section-heading">Sessions</h1>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link {% if full_route[2] == 'public' or full_route[2]|length < 1 %}active{% endif %}" href="{{ path('Session:index') }}">Public</a>
            </li>
            <li class="nav-item">
                <a class="nav-link {% if full_route[2] == 'private' %}active{% endif %}" href="{{ path('Session:index', {'type': 'private'}) }}">Private</a>
            </li>
        </ul>
        {{ partial(result) }}
    </section>
{% endblock %}

{% block js %}
    <script src="{{ asset('js/app.session-index.js') }}"></script>
{% endblock %}